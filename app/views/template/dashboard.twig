{% block header %}
	<!DOCTYPE html>
	<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta http-equiv="X-UA-Compatible" content="id=edge">

		{# Tipografía Universidad de Playa Ancha #}
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900">

		{# Fontawsome #}
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">

		{# Material for Bootstrap CSS #}
		<link rel="stylesheet" type="text/css" href="{{ app.ROUTE_URL }}css/bootstrap-material-design.min.css">

		{# Datatables #}
		<link rel="stylesheet" type="text/css" href="{{ app.ROUTE_URL }}js/datatables/dataTables.bootstrap4.min.css">

		{# SB Admin #}
		<link rel="stylesheet" type="text/css" href="{{ app.ROUTE_URL }}css/sb-admin.min.css">

		{# Another CSS #}
		{% if css is defined %}
			{% for css in css %}
				{% if css is not empty %}
					<link rel="stylesheet" type="text/css" href="{{ app.ROUTE_URL }}css/{{ css }}.css">
				{% endif %}
			{% endfor %}
		{% endif %}

		{# Custom CSS #}
		<link rel="stylesheet" type="text/css" href="{{ app.ROUTE_URL }}css/main.css">

		<link rel="shortcut icon" href="{{ app.ROUTE_URL }}img/favicon.ico" />

		<title>{{ app.NAME_SITE }}</title>

	</head>
	<body id="page-top">  
		
{% endblock %}

{% block menu %}
	<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

		<a class="navbar-brand mr-1" href="{{ app.ROUTE_URL }}Dashboard/">Dashboard</a>

		<button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
			<i class="fas fa-bars"></i>
		</button>

		{# Fixea los botones de la esquina superior derecha #}
		<div class=" d-md-inline-block ml-auto"></div>

		{# Navbar #}
		<ul class="navbar-nav ml-auto ml-md-0">
			<li class="nav-item dropdown no-arrow mx-1">
				<a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<i class="fas fa-bell fa-fw"></i>
					<span class="badge badge-danger">9+</span>
				</a>
				<div class="dropdown-menu dropdown-menu-right" aria-labelledby="alertsDropdown">
					<a class="dropdown-item" href="#">Action</a>
					<a class="dropdown-item" href="#">Another action</a>
					<div class="dropdown-divider"></div>
					<a class="dropdown-item" href="#">Something else here</a>
				</div>
			</li>
			<li class="nav-item dropdown no-arrow mx-1">
				<a class="nav-link dropdown-toggle" href="#" id="messagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<i class="fas fa-envelope fa-fw"></i>
					<span class="badge badge-danger">7</span>
				</a>
				<div class="dropdown-menu dropdown-menu-right" aria-labelledby="messagesDropdown">
					<a class="dropdown-item" href="#">Action</a>
					<a class="dropdown-item" href="#">Another action</a>
					<div class="dropdown-divider"></div>
					<a class="dropdown-item" href="#">Something else here</a>
				</div>
			</li>
			<li class="nav-item dropdown no-arrow">
				<a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<i class="fas fa-user-circle fa-fw"></i>
					<span class="text-capitalize">Usuario</span>
				</a>
				<div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
					<a class="dropdown-item" href="{{ app.ROUTE_URL }}Perfil/">Perfil</a>
					<div class="dropdown-divider"></div>
					<a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">Salir</a>
				</div>
			</li>
		</ul>

	</nav>
{% endblock %}

{% block main %}
	<div id="wrapper">
	
		{# Sidebar #}
		<ul class="sidebar navbar-nav">
			{# Inicio #}
			<li class="nav-item {% if active == 'inicio' %}active{% endif %}">
				<a class="nav-link" href="{{ app.ROUTE_URL }}Dashboard/">
					<i class="fas fa-fw fa-tachometer-alt"></i>
					<span class="text-capitalize">Inicio</span>
				</a>
			</li>

			{# Notificación #}
			<li class="nav-item dropdown {% if active == 'notificacion' %}active{% endif %}">
				<a class="nav-link dropdown-toggle" href="#" id="pagesDropdownNotificacion" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<i class="fas fa-fw fa-bell"></i>
					<span class="text-capitalize">Crear Notificación</span>
				</a>
				<div class="dropdown-menu" aria-labelledby="pagesDropdownNotificacion">
					<a class="dropdown-item" href="{{ app.ROUTE_URL }}Dashboard/Notificacion/">Listar</a>
					<a class="dropdown-item" href="{{ app.ROUTE_URL }}Dashboard/Notificacion/create/">Crear</a>
				</div>
			</li>

			<li class="nav-item {% if active == 'noticia' %}active{% endif %}">
				<a class="nav-link" href="{{ app.ROUTE_URL }}Dashboard/Noticia/">
					<i class="fas fa-fw fa-newspaper"></i>
					<span class="text-capitalize">Crear Noticia</span>
				</a>
			</li>

			<li class="nav-item {% if active == 'documento' %}active{% endif %}">
				<a class="nav-link" href="{{ app.ROUTE_URL }}Dashboard/agregarDocumentos/">
					<i class="fas fa-fw fa-file"></i>
					<span class="text-capitalize">Agregar Documento</span>
				</a>
			</li>

			<li class="nav-item {% if active == 'calendario' %}active{% endif %}">
				<a class="nav-link" href="{{ app.ROUTE_URL }}Dashboard/CalendarioAcademico/">
					<i class="far fa-fw fa-calendar-alt"></i>
					<span class="text-capitalize">Calendario Académico</span>
				</a>
			</li>

			<li class="nav-item {% if active == 'usuario' %}active{% endif %}">
				<a class="nav-link" href="{{ app.ROUTE_URL }}Dashboard/crearUsuario/">
					<i class="fas fa-fw fa-user-plus"></i>
					<span class="text-capitalize">Crear Usuario</span>
				</a>
			</li>

			<li class="nav-item">
				<a class="nav-link" href="{{ app.ROUTE_URL }}">
					<i class="fas fa-fw fa-chevron-left"></i>
					<span class="text-capitalize">Volver</span>
				</a>
			</li>
		</ul>

		<div id="content-wrapper">

			<div class="container-fluid">
				{# Breadcrumbs #}
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="{{ app.ROUTE_URL }}Dashboard/">Dashboard</a>
					</li>

					{% if active != 'inicio' %}
						<li class="breadcrumb-item">
							{% if active == 'notificacion' %}
								<a href="{{ app.ROUTE_URL }}Dashboard/Notificacion/">Notificación</a>
							{% elseif active == 'noticia' %}
								<a href="{{ app.ROUTE_URL }}Dashboard/Noticia/">Noticia</a>
							{% elseif active == 'documento' %}
								<a href="{{ app.ROUTE_URL }}Dashboard/Documentos/">Documentos</a>
							{% elseif active == 'calendario' %}
								<a href="{{ app.ROUTE_URL }}Dashboard/CalendarioAcademico/">Calendario Académico</a>
							{% elseif active == 'usuario' %}
								<a href="{{ app.ROUTE_URL }}Dashboard/Usuario/">Usuario</a>
							{% endif %}
						</li>
					{% endif %}
					
					
					<li class="breadcrumb-item active">{% block breadcrumb %}/{% endblock %}</li>
				</ol>

				{% block content %}{% endblock %}
			</div>


{% endblock %}

{% block footer %}
			{# Sticky Footer #}
			<footer class="sticky-footer">
				<div class="container my-auto">
					<div class="copyright text-center my-auto">
						<span>Copyright © TJL Desarrollo Web 2018</span>
					</div>
				</div>
			</footer>

		</div>
		{# /.content-wrapper #}
	</div>
	{# /#wrapper #}

	{# Scroll to Top Button #}
	<a class="scroll-to-top rounded" href="#page-top">
		<i class="fas fa-angle-up"></i>
	</a>

	{# Logout Modal #}
	<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Desea Salir?</h5>
					<button class="close" type="button" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">×</span>
					</button>
				</div>
				<div class="modal-body">Seleccione "Salir" para cerrar la sesión actual.</div>
				<div class="modal-footer">
					<button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
					<a class="btn btn-primary" href="{{ app.ROUTE_URL }}Login/logout/">Salir</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block footer_scripts %}
		{# Bootstrap core JavaScript #}
		<script src="{{ app.ROUTE_URL }}js/jquery/jquery-3.3.1.min.js"></script>
		<script src="{{ app.ROUTE_URL }}js/popper/popper.min.js"></script>
		
		<script src="{{ app.ROUTE_URL }}js/bootstrap/bootstrap-material-design.min.js"></script>

		{# Core plugin JavaScript #}
		<script src="{{ app.ROUTE_URL }}js/jquery-easing/jquery.easing.min.js"></script>

		{# Page level plugin JavaScript #}
		<script src="{{ app.ROUTE_URL }}js/chart.js/Chart.min.js"></script>
		<script src="{{ app.ROUTE_URL }}js/datatables/jquery.dataTables.min.js"></script>
		<script src="{{ app.ROUTE_URL }}js/datatables/dataTables.bootstrap4.min.js"></script>

		{# Custom scripts for all pages #}
		<script src="{{ app.ROUTE_URL }}js/sb-admin/sb-admin.min.js"></script>

		<script>$(document).ready(function() { $('body').bootstrapMaterialDesign(); });</script>

		{# Another JS #}
		{% if js is defined %}
			{% for js in js %}
				{% if js is not empty %}
					<script src="{{ app.ROUTE_URL }}js/{{ js }}.js"></script>
				{% endif %}
			{% endfor %}
		{% endif %}

		{# Main CSS #}
		<script src="{{ app.ROUTE_URL }}js/main.js"></script>

		</body>
	</html>
{% endblock %}
