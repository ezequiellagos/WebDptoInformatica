{% extends 'template/dashboard.twig' %}

{% block breadcrumb %}
	Perfil
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-12 pb-5">
			<div class="card">
				<h5 class="card-header">Datos personales</h5>
				<div class="card-body">
					<form class="form" action="{{ app.ROUTE_URL }}Perfil/updateUser/" method="POST" autocomplete="off">
						<div class="form-row">
							<div class="form-group col-lg-4">
								<label for="nombre" class="bmd-label-floating">Nombre</label>
								<input type="text" class="form-control" id="nombre" name="nombre" value="{{ nombre }}" required>
								<span class="bmd-help">We'll never share your email with anyone else.</span>
								<div class="invalid-feedback">No olvide colocar su nombre</div>
							</div>

							<div class="form-group col-lg-4">
								<label for="apellido" class="bmd-label-floating">Apellido</label>
								<input type="text" class="form-control" id="apellido" name="apellido" value="{{ apellido }}" required>
								<span class="bmd-help">We'll never share your email with anyone else.</span>
								<div class="invalid-feedback">No olvide colocar su apellido</div>
							</div>

							<div class="form-group col-lg-4">
								<label for="email" class="bmd-label-floating">Correo</label>
								<input type="email" class="form-control" id="email" name="email" value="{{ email }}" required>
								<span class="bmd-help">We'll never share your email with anyone else.</span>
								<div class="invalid-feedback">No olvide colocar su email</div>
							</div>
						</div>
						<button type="submit" class="btn btn-success btn-outline">Guardar</button>
					</form>

					{% if messageControl == 'cambiarDatos' %}
						<div class="alert alert-{{ messageStatus }}" role="alert">
							{{ messageInfo }}
						</div>
					{% endif %}
				</div>
			</div>
		</div>

		<div class="col-12 pb-5">
			<div class="card">
				<h5 class="card-header">Cambiar Contrase単a</h5>
				<div class="card-body">
					<form class="form" action="{{ app.ROUTE_URL }}Perfil/updatePassword/" method="POST" autocomplete="off">
						<div class="form-row">
							<div class="form-group col-lg-4">
								<label for="old_pass" class="bmd-label-floating">Contrase単a Actual</label>
								<input type="password" class="form-control" id="old_pass" name="old_pass">
								<span class="bmd-help">We'll never share your email with anyone else.</span>
							</div>

							<div class="form-group col-lg-4">
								<label for="new_pass" class="bmd-label-floating">Nueva Contrase単a</label>
								<input type="password" class="form-control" id="new_pass" name="new_pass">
								<span class="bmd-help">We'll never share your email with anyone else.</span>
							</div>

							<div class="form-group col-lg-4">
								<label for="repeat_new_pass" class="bmd-label-floating">Repetir Nueva Contrase単a</label>
								<input type="password" class="form-control" id="repeat_new_pass" name="repeat_new_pass">
								<span class="bmd-help">We'll never share your email with anyone else.</span>
							</div>
						</div>
						<button type="submit" class="btn btn-success btn-outline">Guardar</button>
					</form>

					{% if messageControl == 'cambiarPassword' %}
						<div class="alert alert-{{ messageStatus }}" role="alert">
							{{ messageInfo }}
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
