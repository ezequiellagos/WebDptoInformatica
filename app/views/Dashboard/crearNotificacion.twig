{% extends 'template/dashboard.twig' %}

{% block breadcrumb %}
	Crear Notificaci√≥n
{% endblock %}

{% block content %}
	<div class="container">
		<form class="form" action="{{ app.ROUTE_URL }}Dashboard/Notificacion/create/" method="POST">
			<div class="form-group">
				<label for="tema">Tema *</label>
				<input type="text" class="form-control" id="tema" name="tema" required>
				<small id="temaHelp" class="form-text text-muted">Identifique la asignatura, carrera o tema del que se trata</small>
			</div>

			<div class="form-group">
				<label for="mensaje">Mensaje *</label>
				<textarea id="mensaje" name="mensaje"></textarea>
				<small id="mensajeHelp" class="form-text text-muted">Campo requerido.</small>
			</div>

			<input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response">

			<button type="submit" class="btn btn-outline-info mb-2">Enviar</button>

		</form>

		<p>
			{% if message is not empty %}
				<span class="alert alert-{{status}}">{{ message }}</span>
			{% endif %}
		</p>

	</div>
{% endblock %}

{% block scripts %}
	<script type="text/javascript">document.getElementById("mensaje").style.display = "none";</script>
	<script type="text/javascript" src="https://www.google.com/recaptcha/api.js?render={{ app.RECAPTCHA_SITE_KEY }}"></script>
	<script src="{{ app.ROUTE_URL }}js/ckeditor/ckeditor.js"></script>
	<script type="text/javascript">
		 CKEDITOR.replace( 'mensaje',{
			
		 });
	</script>
{% endblock %}