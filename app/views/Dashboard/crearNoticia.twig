{% extends 'template/dashboard.twig' %}

{% block breadcrumb %}
	Crear Noticia
{% endblock %}

{% block content %}
	<div class="container">

		<p>
			{% if message is not empty %}
				<span class="alert alert-{{status}}">{{ message }}</span>
			{% endif %}
		</p>

		<form class="form" action="{{ app.ROUTE_URL }}Dashboard/Noticia/create/" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<label for="tema">Titulo *</label>
				<input type="text" class="form-control" id="titulo" name="titulo" required>
			</div>

			<div class="form-group">
				<label for="mensaje">Cuerpo *</label>
				<textarea id="cuerpo" name="cuerpo"></textarea>
				<small id="mensajeHelp" class="form-text text-muted">Campo requerido.</small>
			</div>
  			<div class="form-group">
    				<label for="imagen">Imagen </label>
    				<input type="file" class="form-control-file" id="imagen"name="imagen">
 			</div>
			<div class="form-group">
				<label for="slug">Slug </label>
				<input type="text" class="form-control" id="slug" name="slug" >
			</div>
			<input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response">

			<button type="submit" class="btn btn-outline-info mb-2">Enviar</button>

		</form>



	</div>
{% endblock %}

{% block scripts %}
	<script type="text/javascript">document.getElementById("cuerpo").style.display = "none";</script>
	<script type="text/javascript" src="https://www.google.com/recaptcha/api.js?render={{ app.RECAPTCHA_SITE_KEY }}"></script>
	<script src="{{ app.ROUTE_URL }}js/ckeditor/ckeditor.js"></script>
	<script type="text/javascript">
		 CKEDITOR.replace( 'cuerpo',{
			
		 });
	</script>
{% endblock %}